pipeline {
    agent any

    environment {
        PROJECT_DIR = "/home/ubuntu/ERP-Backend-QA"
        BACKEND_DIR = "${PROJECT_DIR}/erp_project"
        VENV_DIR = "${BACKEND_DIR}/venv"
    }

    stages {
        stage('üì• Pull Latest Code') {
            steps {
                echo "Fetching latest code from QA branch..."
                dir("${PROJECT_DIR}") {
                    sh '''
                    sudo chown -R jenkins:jenkins ${PROJECT_DIR} || true
                    sudo chmod -R 755 ${PROJECT_DIR} || true
                    git fetch origin qa
                    git checkout qa
                    git pull origin qa
                    '''
                }
            }
        }

        stage('üì¶ Install Dependencies') {
            steps {
                echo "Setting up Python virtual environment..."
                sh '''
                cd "${BACKEND_DIR}"
                if [ ! -d "${VENV_DIR}" ]; then
                    python3 -m venv "${VENV_DIR}"
                fi
                . "${VENV_DIR}/bin/activate"
                pip install --upgrade pip
                pip install -r requirements.txt
                '''
            }
        }

        stage('üßπ Apply Migrations & Collect Static Files') {
            steps {
                echo "Applying migrations and collecting static files..."
                sh '''
                cd "${BACKEND_DIR}"
                . "${VENV_DIR}/bin/activate"
                python3 manage.py migrate --noinput
                python3 manage.py collectstatic --noinput || true
                '''
            }
        }

        stage('üöÄ Restart Gunicorn & Nginx') {
            steps {
                echo "Restarting backend services..."
                sh '''
                sudo systemctl restart gunicorn || true
                sudo systemctl restart nginx || true
                sleep 5
                '''
            }
        }

        stage('üß™ Smoke Test') {
            steps {
                echo "Running smoke test..."
                sh '''
                curl -I http://127.0.0.1:8000/admin/ || {
                    echo "‚ùå Smoke test failed: backend not reachable"
                    exit 1
                }
                '''
            }
        }
    }

    post {
        success {
            sh 'echo "‚úÖ QA Backend Deployed Successfully on $(hostname)"'
        }
        failure {
            sh 'echo "‚ùå Deployment Failed! Please check Jenkins logs."'
        }
    }
}
